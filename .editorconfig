# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
charset = utf-8

# 4 space indentation for C/C++ files
[*.{c,h,cpp,hpp}]
indent_style = space
indent_size = 4
trim_trailing_whitespace = true

# 2 space indentation for CMake files
[{CMakeLists.txt,*.cmake}]
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

# 2 space indentation for JSON files
[*.json]
indent_style = space
indent_size = 2
trim_trailing_whitespace = true

# 2 space indentation for Markdown files
[*.md]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false

# Tab indentation for Makefile
[Makefile]
indent_style = tab

# Assembly files
[*.{s,S}]
indent_style = space
indent_size = 4
trim_trailing_whitespace = true

# Linker scripts
[*.ld]
indent_style = space
indent_size = 2
trim_trailing_whitespace = true
